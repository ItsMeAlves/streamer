<% include header.ejs %>
    <% if(user) { %>
        <h1>Logged in!</h1>
    <% } else { %>
        <h1>Not logged</h1>
    <% } %>

    <a href="/add">Adicionar músicas</a>
    <a href="/all">Ver todas as músicas</a>
    <a href="/logout">Sair</a>

    <% if(entries.length > 0) { %>
        <h3>Músicas enviadas por você</h3>
        <ul>
            <% for(var i = 0; i < entries.length; i++) { %>
                <li>
                    <%= entries[i].title %> - <%= entries[i].artist %>
                    <audio controls="controls" class="player">
                        <source type="audio/mp3" src="/music?path=/<%= entries[i].path %>">
                    </audio>
                </li>
            <% } %>
        </ul>
    <% } else { %>
        <h3>Você ainda não enviou músicas</h3>
    <% } %>
<% include footer.ejs %>
